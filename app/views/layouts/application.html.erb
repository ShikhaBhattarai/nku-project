<!DOCTYPE html>
<html>
<head>
  <title>NkuProject</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
 <% if current_user %>
  <%= link_to "Sign out", sign_out_path, class: "btn btn-default navbar-btn"%>
  <%= link_to "Recipies", recipies_path, class: "btn btn-default navbar-btn"%>
  <%else%>
<%= link_to "Sign up", new_user_path, class: "btn btn-default navbar-btn" %>
<%= link_to "Sign in", new_session_path, class: "btn btn-primary navbar-btn" %>
  <% end %>
  <% flash.each do |key, value| %>
  <div class="flash <%= flash_class(key) %> push--top">
  <%= value %>
  </div>
  <% end %>
<%= yield %>
  

</body>
</html>

